<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("Music Store", "Menu", "Store", new { @class = "navbar-brand" })
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Home", "Menu", "Store", new { @class = "nav-link" })                    
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Configuration", "", "Store", new { @class = "nav-link" })
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                @Html.ActionLink("Exit", "Logout", "Store", null , new { @class = "nav-link" })
            </ul>
        </div>
    </nav>

    <div div class="container body-content" style="margin-top: 30px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
